---
import FacebookIcon from "./icons/FacebookIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import WhatsAppIcon from "./icons/WhatsAppIcon.astro";
import SocialBtn from "./SocialBtn.astro";
---

<div
  class="flex lg:flex-col min-[320px]:flex-row min-[320px]:max-w-full lg:max-w-lg max-h-screen min-[320px]:justify-center lg:justify-evenly min-[320px]:items-start lg:items-center lg:sticky top-0 gap-24 z-0"
>
  <nav
    class="flex flex-col lg:mt-28 min-[320px]:mt-8 min-[320px]:-mb-12 gap-14 align-middle lg:justify-between w-full px-12 text-center text-white"
  >
    <li class="list-none flex justify-center min-[320px]:my-1 lg:my-7">
      <a class="flex justify-center group w-fit" href="#inicio">
        <img
          class="object-cover lg:max-w-1/3 min-[320px]:max-w-28 group-hover:scale-125 group-hover:[filter:drop-shadow(0px_0px_25px_#0033ee)] transition"
          src="/logo.png"
          alt=""
        />
      </a>
    </li>
    <div class="lg:flex lg:flex-col min-[320px]:hidden lg:gap-10">
      <li class="list-none">
        <a
          class="text-lg font-medium px-4 py-2 rounded-none text-[white] no-underline bg-gradient-to-b from-[cyan] to-[cyan] bg-no-repeat bg-[length:0%_0.15em] bg-[0%_100%] transition-[background-size] duration-300 ease-in-out hover:bg-[length:100%_0.15em] focus:bg-[length:100%_0.15em] active:bg-[length:100%_0.15em] hover:text-cyan-400"
          href="#experiencias">Experiencias</a
        >
      </li>
      <li class="list-none">
        <a
          class="text-lg font-medium px-4 py-2 rounded-none text-[white] no-underline bg-gradient-to-b from-[cyan] to-[cyan] bg-no-repeat bg-[length:0%_0.15em] bg-[0%_100%] transition-[background-size] duration-300 ease-in-out hover:bg-[length:100%_0.15em] focus:bg-[length:100%_0.15em] active:bg-[length:100%_0.15em] hover:text-cyan-400"
          href="#contacto">Contacto</a
        >
      </li>
    </div>
  </nav>

  <aside
    class="lg:flex min-[320px]:hidden lg:flex-col mt-10 gap-10 lg:justify-between items-center mx-auto"
  >
    <div class="lg:grid gap-4 lg:grid-cols-2 lg:justify-center">
      <SocialBtn link="">
        <FacebookIcon />
      </SocialBtn>
      <SocialBtn link="">
        <WhatsAppIcon />
      </SocialBtn>
      <SocialBtn link="">
        <GitHubIcon />
      </SocialBtn>
      <SocialBtn link="">
        <LinkedInIcon />
      </SocialBtn>
    </div>

    <footer
      class="flex lg:text-center min-[320px]:hidden lg:block gap-5 lg:flex-col mx-auto font-light text-md text-white justify-between items-center"
    >
      <p>Dacame98@gmail.com</p>
      <p>Cartagena - Colombia</p>
      <p>26 AÃ±os</p>
    </footer>
  </aside>
</div>
