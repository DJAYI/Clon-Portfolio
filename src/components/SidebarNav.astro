---
import FacebookIcon from "./icons/FacebookIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import WhatsAppIcon from "./icons/WhatsAppIcon.astro";
import SocialBtn from "./SocialBtn.astro";
---

<div
  class="flex flex-col max-w-lg min-h-max justify-between items-start sticky top-0 gap-24 z-0"
>
  <nav
    class="flex flex-col mt-28 gap-14 align-middle justify-between w-fit px-12 text-center text-white"
  >
    <li class="list-none my-7">
      <a class="flex justify-center group w-fit" href="">
        <img
          class="object-cover w-1/3 group-hover:scale-125 group-hover:[filter:drop-shadow(0px_0px_25px_#0033ee)] transition"
          src="/logo.png"
          alt=""
        />
      </a>
    </li>
    <div class="flex flex-col gap-5">
      <li class="list-none">
        <a
          class="text-lg font-medium px-4 py-2 rounded-none text-[white] no-underline bg-gradient-to-b from-[cyan] to-[cyan] bg-no-repeat bg-[length:0%_0.15em] bg-[0%_100%] transition-[background-size] duration-300 ease-in-out hover:bg-[length:100%_0.15em] focus:bg-[length:100%_0.15em] active:bg-[length:100%_0.15em] hover:text-cyan-400"
          href="">Experiencias</a
        >
      </li>
      <li class="list-none">
        <a
          class="text-lg font-medium px-4 py-2 rounded-none text-[white] no-underline bg-gradient-to-b from-[cyan] to-[cyan] bg-no-repeat bg-[length:0%_0.15em] bg-[0%_100%] transition-[background-size] duration-300 ease-in-out hover:bg-[length:100%_0.15em] focus:bg-[length:100%_0.15em] active:bg-[length:100%_0.15em] hover:text-cyan-400"
          href="">Contacto</a
        >
      </li>
    </div>
  </nav>

  <aside
    class="flex flex-col mt-10 gap-10 justify-between items-center mx-auto"
  >
    <div class="flex gap-4 flex-wrap justify-center">
      <SocialBtn link="">
        <FacebookIcon />
      </SocialBtn>
      <SocialBtn link="">
        <WhatsAppIcon />
      </SocialBtn>
      <SocialBtn link="">
        <GitHubIcon />
      </SocialBtn>
      <SocialBtn link="">
        <LinkedInIcon />
      </SocialBtn>
    </div>

    <div
      class="flex gap-5 mx-auto font-light text-md text-white justify-between items-center"
    >
