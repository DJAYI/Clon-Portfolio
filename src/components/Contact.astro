<div
  class="flex flex-col gap-12 px-9 items-center mt-10 justify-evenly"
  id="contacto"
>
  <h2 class="text-5xl font-bold">Contacto</h2>
  <form class="flex flex-col w-full max-w-[600px] gap-5">
    <span class="self-start px-2 font-semibold">Email &amp; Asunto</span>
    <label class="flex flex-col items-start w-full gap-4 sm:flex-row">
      <input
        type="email"
        name="email"
        class="w-full px-4 py-2 transition border-2 rounded-lg outline-none sm:w-1/2 bg-gray-300/20 border-slate-600/40 focus:border-indigo-600/60"
        placeholder="Ingrese su Email"
        required=""
      />
      <input
        type="text"
        name="subject"
        class="w-full px-4 py-2 transition border-2 rounded-lg outline-none sm:w-1/2 bg-gray-300/20 border-slate-600/40 focus:border-indigo-600/60"
        placeholder="Ingrese su Asunto"
        required=""
      />
    </label>
    <label class="flex flex-col items-start w-full gap-4">
      <span class="px-2 font-semibold">Mensaje</span>
      <textarea
        name="message"
        class="px-4 py-2 bg-gray-300/20 rounded-lg h-[130px] w-full border-2 border-slate-600/40 transition focus:border-indigo-600/60 outline-none resize-none"
        placeholder="Ingrese su Mensaje"
        required=""></textarea>
    </label>
    <button
      class="self-end px-4 py-2 font-semibold transition border-2 border-gray-400 rounded-lg cursor-pointer hover:bg-black hover:text-white w-fit"
      >Enviar</button
    >
  </form>
</div>
